{
    "version": "0.2.0",
    "configurations": [
      {
        "name": "Debug Nest Server",
        "type": "node",
        "request": "launch",
        "program": "${workspaceFolder}/node_modules/@nestjs/cli/bin/nest.js",
        "args": ["start"],
        "runtimeArgs": ["--nolazy", "-r", "ts-node/register"],
        "sourceMaps": true,
        "cwd": "${workspaceFolder}",
        "env": {
          "NODE_ENV": "development"
        },
        "outputCapture": "std",
        "skipFiles": ["<node_internals>/**/*.js"],
      }
      
    ]
  }
  